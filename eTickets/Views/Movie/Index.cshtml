@model IEnumerable<Movie>

@{
    ViewData["title"] = "List Of Movies";
}

<div class="container">
  <div class="row">
    
        @foreach (var item in Model)
        {
        <div class="col-12 col-sm-8 col-md-6 col-lg-4">
        <div class="card mb-3" >
        <img class="card-img-top " src="@item.ImageURL" style="height:400px">
        <div class="card-img-overlay d-flex justify-content-end">
          <a href="#" class="card-link text-danger like">
            <i class="fas fa-heart"></i>
          </a>
        </div>
        <div class="card-body">
          <h4 class="card-title">@Html.DisplayFor(Modelitem=>item.Name)</h4>
          <h6 class="card-subtitle mb-2 text-muted">StartDate:@Html.DisplayFor(modelitem=>item.StartDate) </h6>
          <h6 class="card-subtitle mb-2 text-muted">EndDate:@Html.DisplayFor(modelitem=>item.EndDate)</h6>

          <p class="card-text">
              <b> Cinema :</b>@Html.DisplayFor(modelitem=>item.Cinema.Name)
            </p>
            <p class="card-text">
              <b> Status :</b>
                            @if(DateTime.Now >= item.StartDate && DateTime.Now <=item.EndDate)
                            {
                                <span class="badge bg-success text-white">AVAILABLE</span>
                            }
                            else
                            {
                               <span class="badge bg-primary text-white">UPCOMMING</span>
                            }
             </p>

          <div class="buy d-flex justify-content-between align-items-center">
            <div class="price text-success"><h5 class="mt-4">Price:@Html.DisplayFor(modelitem=>item.Price)$</h5></div>
             <a href="#" class="btn btn-danger mt-3"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
             <a href="#" class="btn btn-primary mt-3"><i class="fas fa-Details"></i> Details</a>
             <a href="#" class="btn btn-success mt-3"><i class="fas fa-Details"></i> Edit</a>


          </div>
        </div>
      </div>
       </div>
        }
      
    </div>
 
</div>
